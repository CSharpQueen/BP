@model GradFilmaModel.Projekcija
@{
    ViewBag.Title = "CreateProjekcija";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<br />
<br />

<div class="row">
    <div class="box">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.vrijemePrikazivanja,"Termin prikazivanja", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(model => model.vrijemePrikazivanja, new { @placeholder = "__/__/___ __:__" })
                        @Html.ValidationMessageFor(model => model.vrijemePrikazivanja, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.tipProjekcijeId, "Tip projekcije", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.tipProjekcijeId, new SelectList(new List<Object>{  new { value = 1 , text = "1"  },
                       new { value = 2 , text = "2" },
                       new { value = 3 , text = "3"} }, "value", "text", 1))
                        @Html.ValidationMessageFor(model => model.tipProjekcijeId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.filmId, "ID Filma", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.filmId, new SelectList(new List<Object>{  new { value = 1 , text = "1"  },
                       new { value = 2 , text = "2" },
                       new { value = 3 , text = "3"} }, "value", "text", 1))
                        @Html.ValidationMessageFor(model => model.filmId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.kinoSalaId,"ID Kino sale", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.DropDownListFor(model => model.kinoSalaId, new SelectList(new List<Object>{  new { value = 1 , text = "1"  },
                       new { value = 2 , text = "2" },
                       new { value = 3 , text = "3"} }, "value", "text", 1))
                        @Html.ValidationMessageFor(model => model.kinoSalaId, "", new { @class = "text-danger" })
                    </div>
                </div>
                
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Dodaj" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("<<Nazad", "Index")
        </div>
    </div>
</div>
